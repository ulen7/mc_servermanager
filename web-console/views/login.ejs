<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Link to the stylesheet served from the 'public' folder -->
    <link rel="stylesheet" href="/css/style.css">
    <title>Login - Web Console</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>🎮 Web Server Manager</h1>
            <p>Server Administration Console</p>
        </div>

        <!-- Login Form Section -->
        <div id="loginSection" class="login-container">
            <div class="login-form">
                <h2>🔐 Login</h2>
                <!-- This form now submits a POST request to the /login route on the server -->
                <form action="/login" method="POST">
                    <!-- EJS code to display an error message if one is passed from the server -->
                    <% if (typeof error !== 'undefined' && error) { %>
                        <p style="color: #e74c3c; margin-bottom: 15px;"><%= error %></p>
                    <% } %>
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <button type="submit" class="btn-login">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
